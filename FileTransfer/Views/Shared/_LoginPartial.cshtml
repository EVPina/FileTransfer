@using Microsoft.AspNetCore.Identity
@using FileTransfer.Models.Entities
@inject SignInManager<Usuario> SignInManager
@inject UserManager<Usuario> UserManager

<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" id="username" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false">
            @*<img src="~/images/usuario.svg" id="ImageUser" alt="imagen del usuario" width="30" />*@
        </a>
        <ul class="dropdown-menu">
            <li><a class="dropdown-item" asp-action="Profile" asp-controller="User">Perfil</a></li>
            <li>
                <form id="logoutForm" class="form-inline" method="post" asp-action="CerrarSesion" asp-controller="Account">
                    <button id="logout" type="submit" class="nav-link btn btn-link text-dark nav-item dropdown">Logout</button>
                </form>
            </li>
        </ul>
    </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" id="register" asp-action="Register" asp-controller="Account">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" id="login" asp-action="Login" asp-controller="Account">Login</a>
        </li>
    }
</ul>
<script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>

<script>
    let url = document.URL;
    const iduser = url.substring(url.indexOf("#") + 1, url.length)
    //Obtener imagen del usuario
    const GetUserImage=(iduser)=>{
        let username = document.getElementById('username')
        let data = { id: iduser }
        let url2 = "@Url.Action( "GetUsername", "User")"
        $.post(url2, data).done(function (data) {
            username.textContent = data
        }).fail(function (err) {
            console.log(err.responseText)
        })
    }
    if (url.indexOf("#") !== -1) {
        localStorage.setItem("iduser", iduser)
        GetUserImage(iduser);
    } else {
        const id = localStorage.getItem('iduser')
        GetUserImage(id);
    }



</script>